<div type="container" id="main-content">
    <div type="row">
        <div type="card">
            <div type="card-header">
                <h3>{{title}}</h3>
            </div>
            <div type="card-body">
                {{listDesc}}
            </div>
        </div>
    </div>
</br>
    <div type="row">
        <div type="card">
            <div type="card-body">
            <a href="/addbook/{{id}}">
                <button class="btn btn-primary">Add a book</button>
            </a>
            <a href="/edit/{{id}}">
                <button class="btn btn-primary">Edit list</button>
            </a>
            <button class="btn btn-danger del-list" data-id="{{id}}">Delete list</button>
            </br></br>
            </div>
        </div>
    </div>
<div class="row">
        {{#each books as |book|}}
        <div class="col-sm-2">
            <a href="/book/{{id}}">
                <div class="card">
                    <img class="card-img object-fit-cover" src="https://covers.openlibrary.org/b/olid/{{book.olid}}-M.jpg" alt="{{book.title}} cover">
                    <div class="card-body">
                        <div class="card-title">
                            {{book.title}}
                        </div>
                    </div>
                    </a>
                        <div class="card-footer">
                            <button class="btn btn-primary del-book" data-id="{{listitem.id}}">Delete</button>
                        </div>
                </div>
                </div>
        {{/each}}
    </div>
</div>
</div>


<script src="../js/deleteList.js"></script>
<script src="../js/deleteBook.js"></script>