<div type="container" id="main-content">
    <div type="row">
        <div type="card">
            <div type="card-header">
                <h3>{{title}}</h3>
            </div>
            <div type="card-body">
                {{listDesc}}
            </div>
        </div>
    </div>
</br>
    <div type="row">
        <div type="card">
            <div type="card-body">
            <a href="/addbook/{{id}}">
                <button class="btn btn-primary">Add a book</button>
            </a>
            <a href="/edit/{{id}}">
                <button class="btn btn-primary">Edit list</button>
            </a>
            <button class="btn btn-danger del-list" data-id="{{id}}">Delete list</button>
            </br></br>
            </div>
        </div>
    </div>
<div class="row">
  {{#each books as |book|}}
    <div class="col-6 col-sm-3 col-md-2">
      <!-- col-6: 2 cards in a row on extra small devices (phones)
           col-sm-3: 4 cards in a row on small devices (tablets)
           col-md-2: 6 cards in a row on medium devices (desktops) -->
      <a href="/book/{{id}}">
        <div class="card">
          <img class="card-img-top" src="https://covers.openlibrary.org/b/olid/{{book.olid}}-M.jpg" alt="{{book.title}} cover" style="object-fit: cover; width: 100%; height: 200px;"> <!-- Adjust height as needed -->
          <div class="card-body">
            <h5 class="card-title">{{book.title}}</h5>
          </div>
          <div class="card-footer">
            <button class="btn btn-primary del-book" data-id="{{listitem.id}}">Delete</button>
          </div>
        </div>
      </a>
    </div>
  {{/each}}
</div>

</div>
</div>


<script src="../js/deleteList.js"></script>
<script src="../js/deleteBook.js"></script>